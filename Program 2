program 2

Query 1
UPDATE STUDENT 
SET total = mark1 + mark2 + mark3;

Query 2
SELECT USN, name, GPA FROM STUDENT;

Query 3 
SELECT * FROM STUDENT 
WHERE YEAR(date_of_birth) = 2000;

Query 4
SELECT * FROM STUDENT 
WHERE branch = 'CSE';

Query 5 
SELECT branch, MAX(GPA) AS max_gpa 
FROM STUDENT 
GROUP BY branch;

Query 6 
SELECT * FROM STUDENT 
WHERE name LIKE 'S%';

Query 7 
SELECT * FROM STUDENT 
WHERE name LIKE '%AR';

Query 8
DELETE FROM STUDENT 
WHERE USN = '1001';

